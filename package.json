{
  "name": "autonomous-worlds-hackathon",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "repository": {
    "url": "https://github.com/wefa-tech/autonomous-worlds-hackathon"
  },
  "scripts": {
    "initialize": "yarn workspace contracts initialize",
    "dev": "run-pty % yarn dev:node % yarn dev:client % yarn dev:api % yarn dev:contracts",
    "dev:api": "yarn workspace api run dev",
    "dev:node": "yarn workspace contracts run devnode",
    "dev:client": "yarn workspace client dev",
    "dev:contracts": "yarn workspace contracts run dev",
    "build": "run-pty % yarn build:contracts % yarn build:client % yarn build:api % yarn build:circuits",
    "build:api": "yarn workspace api start",
    "build:client": "yarn workspace client build",
    "build:contracts": "yarn workspace contracts deploy",
    "test": "run-pty % yarn test:contracts % yarn test:client",
    "test:ci": "yarn test && start-server-and-test dev https://localhost:3000 cypress run",
    "test:e2e": "start-server-and-test dev https://localhost:3000 cypress open",
    "test:api": "yarn workspace api test",
    "test:client": "yarn workspace client test",
    "test:contracts": "yarn workspace contracts test"
  },
  "devDependencies": {
    "@testing-library/cypress": "9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "17.0.38",
    "cypress": "12.8.1",
    "identity-obj-proxy": "3.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "run-pty": "^4.0.3",
    "start-server-and-test": "2.0.0",
    "typescript": "5.0.2"
  }
}
